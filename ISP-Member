              <div className="mt-3 flex gap-2">
                <Button size="sm" className="bg-blue-500 hover:bg-blue-600 text-white flex-1 h-9 text-xs rounded-lg">
                  <Download className="w-3 h-3 mr-1" />
                  Download
                </Button>
              </div>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>
  );

  // Main Content Renderer
  const renderContent = () => {
    if (userRole === 'chairman') {
      switch (currentView) {
        case 'dashboard':
          return <ChairmanDashboard />;
        case 'finance':
          return <FinanceDashboard />;
        case 'voting':
          return <VotingDashboard />;
        case 'members':
          return <MembersDirectory />;
        case 'announcements':
          return <AnnouncementsView />;
        case 'approvals':
          return <ChairmanDashboard />;
        case 'communications':
          return <AnnouncementsView />;
        default:
          return <ChairmanDashboard />;
      }
    }
    
    switch (currentView) {
      case 'dashboard':
        return <MemberDashboard />;
      case 'finance':
        return <FinanceDashboard />;
      case 'voting':
        return <VotingDashboard />;
      case 'members':
        return <MembersDirectory />;
      case 'announcements':
        return <AnnouncementsView />;
      case 'knowledge':
        return <KnowledgeBase />;
      case 'store':
        return <MerchandiseStore />;
      default:
        return <MemberDashboard />;
    }
  };

  if (currentView === 'login') {
    return <LoginScreen />;
  }

  return (
    <div className="min-h-screen bg-slate-950">
      <Sidebar />
      <Header />
      <main className={`pt-24 pb-8 px-6 transition-all duration-300 ${isSidebarOpen ? 'md:ml-64' : 'ml-0'}`}>
        <div className="max-w-7xl mx-auto">
          {renderContent()}
        </div>
      </main>
    </div>
  );
}
