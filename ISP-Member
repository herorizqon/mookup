              <div className="text-white text-xl md:text-2xl font-bold mt-1 tracking-tight">Rp 213.5M</div>
              <p className="text-xs text-slate-500 mt-2">From 120 active members</p>
            </div>

            <div className="p-4 bg-slate-700/60 rounded-xl border-l-4 border-amber-400 hover:bg-slate-600/80 transition-all">
              <div className="flex items-center justify-between mb-3">
                <div className="w-10 h-10 bg-gradient-to-br from-amber-400 via-orange-500 to-amber-600 rounded-lg flex items-center justify-center">
                  <ArrowDownRight className="w-5 h-5 text-white" />
                </div>
                <span className="text-amber-400 text-xs font-semibold px-2 py-1 bg-amber-400/20 rounded">-5%</span>
              </div>
              <div className="text-slate-400 text-xs md:text-sm font-medium">Total Expenses</div>
              <div className="text-white text-xl md:text-2xl font-bold mt-1 tracking-tight">Rp 65.0M</div>
              <p className="text-xs text-slate-500 mt-2">Operational and program costs</p>
            </div>

            <div className="p-4 bg-slate-700/60 rounded-xl border-l-4 border-blue-400 hover:bg-slate-600/80 transition-all">
              <div className="flex items-center justify-between mb-3">
                <div className="w-10 h-10 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center">
                  <DollarSign className="w-5 h-5 text-white" />
                </div>
                <span className="text-blue-400 text-xs font-semibold px-2 py-1 bg-blue-400/20 rounded">Healthy</span>
              </div>
              <div className="text-slate-400 text-xs md:text-sm font-medium">Net Balance</div>
              <div className="text-white text-xl md:text-2xl font-bold mt-1 tracking-tight">Rp 148.5M</div>
              <p className="text-xs text-slate-500 mt-2">Available for programs</p>
            </div>
          </div>
        </CardContent>
      </Card>

      <Card className="bg-slate-800/60 backdrop-blur-sm border-slate-600/60 shadow-xl">
        <CardHeader>
          <CardTitle className="text-white font-bold tracking-tight text-base md:text-lg">Upcoming Decisions</CardTitle>
          <CardDescription className="text-slate-400 font-medium text-sm">Strategic decisions requiring attention</CardDescription>
        </CardHeader>
        <CardContent>
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div className="p-4 bg-slate-700/60 rounded-xl border border-slate-600/60 hover:bg-slate-600/80 transition-all cursor-pointer group">
              <div className="flex items-center justify-between mb-3">
                <h3 className="text-white font-semibold text-sm group-hover:text-amber-400 transition-colors">AGM 2024 Preparation</h3>
                <span className="px-2 py-1 bg-amber-500 text-white text-xs font-semibold rounded">5 days</span>
              </div>
              <p className="text-slate-400 text-sm">Review agenda, approve budget presentation, confirm venue arrangements</p>
              <div className="mt-3 flex gap-2">
                <Button 
                  size="sm" 
                  onClick={() => alert('Opening AGM 2024 preparation details...')}
                  className="bg-blue-500 hover:bg-blue-600 text-white flex-1 h-9 text-xs rounded-lg"
                >
                  <Eye className="w-3 h-3 mr-1" />
                  Review
                </Button>
              </div>
            </div>

            <div className="p-4 bg-slate-700/60 rounded-xl border border-slate-600/60 hover:bg-slate-600/80 transition-all cursor-pointer group">
              <div className="flex items-center justify-between mb-3">
                <h3 className="text-white font-semibold text-sm group-hover:text-purple-400 transition-colors">Committee Elections</h3>
                <span className="px-2 py-1 bg-purple-500 text-white text-xs font-semibold rounded">Active</span>
              </div>
              <p className="text-slate-400 text-sm">Monitor voting progress for technical committee member selection</p>
              <div className="mt-3 flex gap-2">
                <Button 
                  size="sm" 
                  onClick={() => setCurrentView('voting')}
                  className="bg-purple-500 hover:bg-purple-600 text-white flex-1 h-9 text-xs rounded-lg"
                >
                  <BarChart3 className="w-3 h-3 mr-1" />
                  View Results
                </Button>
              </div>
            </div>

            <div className="p-4 bg-slate-700/60 rounded-xl border border-slate-600/60 hover:bg-slate-600/80 transition-all cursor-pointer group">
              <div className="flex items-center justify-between mb-3">
                <h3 className="text-white font-semibold text-sm group-hover:text-blue-400 transition-colors">Partnership Review</h3>
                <span className="px-2 py-1 bg-blue-500 text-white text-xs font-semibold rounded">Pending</span>
              </div>
              <p className="text-slate-400 text-sm">Final approval needed for TechCorp strategic partnership agreement</p>
              <div className="mt-3 flex gap-2">
                <Button 
                  size="sm" 
                  onClick={() => alert('TechCorp partnership approved!')}
                  className="bg-emerald-500 hover:bg-emerald-600 text-white flex-1 h-9 text-xs rounded-lg"
                >
                  <CheckCircle2 className="w-3 h-3 mr-1" />
                  Approve
                </Button>
              </div>
            </div>

            <div className="p-4 bg-slate-700/60 rounded-xl border border-slate-600/60 hover:bg-slate-600/80 transition-all cursor-pointer group">
              <div className="flex items-center justify-between mb-3">
                <h3 className="text-white font-semibold text-sm group-hover:text-emerald-400 transition-colors">Member Compliance Report</h3>
                <span className="px-2 py-1 bg-emerald-500 text-white text-xs font-semibold rounded">Ready</span>
              </div>
              <p className="text-slate-400 text-sm">Monthly compliance report ready for review and signature</p>
              <div className="mt-3 flex gap-2">
                <Button 
                  size="sm" 
                  onClick={() => alert('Downloading Member Compliance Report November 2024.pdf...')}
                  className="bg-blue-500 hover:bg-blue-600 text-white flex-1 h-9 text-xs rounded-lg"
                >
                  <Download className="w-3 h-3 mr-1" />
                  Download
                </Button>
              </div>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>
  );

  // Main Content Renderer
  const renderContent = () => {
    if (userRole === 'treasurer') {
      switch (currentView) {
        case 'dashboard':
          return <TreasurerDashboard />;
        case 'finance':
          return <FinanceDashboard />;
        case 'members':
          return <MembersDirectory />;
        default:
          return <TreasurerDashboard />;
      }
    }
    
    if (userRole === 'chairman') {
      switch (currentView) {
        case 'dashboard':
          return <ChairmanDashboard />;
        case 'finance':
          return <FinanceDashboard />;
        case 'voting':
          return <VotingDashboard />;
        case 'members':
          return <MembersDirectory />;
        case 'announcements':
          return <AnnouncementsView />;
        case 'approvals':
          return <ChairmanDashboard />;
        case 'communications':
          return <AnnouncementsView />;
        default:
          return <ChairmanDashboard />;
      }
    }
    
    switch (currentView) {
      case 'dashboard':
        return <MemberDashboard />;
      case 'finance':
        return <FinanceDashboard />;
      case 'voting':
        return <VotingDashboard />;
      case 'members':
        return <MembersDirectory />;
      case 'announcements':
        return <AnnouncementsView />;
      case 'knowledge':
        return <KnowledgeBase />;
      case 'store':
        return <MerchandiseStore />;
      default:
        return <MemberDashboard />;
    }
  };

  if (currentView === 'login') {
    return <LoginScreen />;
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950">
      <Sidebar />
      <Header />
      <main className={`pt-20 pb-6 px-4 transition-all duration-300 ml-0 ${isSidebarOpen ? 'md:ml-64' : 'md:ml-0'} md:pt-24 md:pb-8 md:px-6`}>
        <div className="max-w-7xl mx-auto">
          {renderContent()}
        </div>
      </main>
    </div>
  );
}
