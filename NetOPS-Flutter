                    <svg className="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div className="flex-1">
                    <div className="font-semibold text-slate-800">System backup completed</div>
                    <div className="text-sm text-slate-600 mt-1">Full database backup successful - 2.4 GB</div>
                    <div className="text-xs text-slate-500 mt-2">5 hours ago</div>
                  </div>
                </div>

                <div className="flex items-start space-x-4 p-4 bg-purple-50 rounded-xl border-l-4 border-l-purple-600">
                  <div className="w-10 h-10 bg-purple-600 rounded-lg flex items-center justify-center">
                    <svg className="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                  </div>
                  <div className="flex-1">
                    <div className="font-semibold text-slate-800">System update deployed</div>
                    <div className="text-sm text-slate-600 mt-1">Version 2.4.1 - Security patches applied</div>
                    <div className="text-xs text-slate-500 mt-2">8 hours ago</div>
                  </div>
                </div>

                <div className="flex items-start space-x-4 p-4 bg-orange-50 rounded-xl border-l-4 border-l-orange-600">
                  <div className="w-10 h-10 bg-orange-600 rounded-lg flex items-center justify-center">
                    <svg className="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                  </div>
                  <div className="flex-1">
                    <div className="font-semibold text-slate-800">High disk usage warning</div>
                    <div className="text-sm text-slate-600 mt-1">Storage at 72% - Consider cleanup</div>
                    <div className="text-xs text-slate-500 mt-2">12 hours ago</div>
                  </div>
                </div>
              </div>
            </CardContent>
          </Card>

          <Card className="shadow-xl border-slate-200">
            <CardHeader className="bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
              <CardTitle className="text-slate-800">Database Management</CardTitle>
              <CardDescription className="text-slate-600 font-medium">System data overview</CardDescription>
            </CardHeader>
            <CardContent className="pt-6">
              <div className="space-y-4">
                <div className="p-5 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl border border-blue-200">
                  <div className="flex items-center justify-between mb-3">
                    <div className="text-sm font-semibold text-slate-700">Total Records</div>
                    <div className="text-3xl font-bold text-blue-600">45.2K</div>
                  </div>
                  <div className="text-xs text-slate-600">Database size: 2.4 GB</div>
                </div>

                <div className="grid grid-cols-2 gap-4">
                  <div className="p-4 bg-white rounded-xl border-2 border-slate-200 hover:border-green-500 transition-colors">
                    <div className="text-2xl font-bold text-green-600">1,245</div>
                    <div className="text-xs text-slate-600 mt-1 font-medium">Active Tasks</div>
                  </div>
                  <div className="p-4 bg-white rounded-xl border-2 border-slate-200 hover:border-purple-500 transition-colors">
                    <div className="text-2xl font-bold text-purple-600">8,932</div>
                    <div className="text-xs text-slate-600 mt-1 font-medium">Completed Tasks</div>
                  </div>
                  <div className="p-4 bg-white rounded-xl border-2 border-slate-200 hover:border-orange-500 transition-colors">
                    <div className="text-2xl font-bold text-orange-600">425</div>
                    <div className="text-xs text-slate-600 mt-1 font-medium">Open Tickets</div>
                  </div>
                  <div className="p-4 bg-white rounded-xl border-2 border-slate-200 hover:border-red-500 transition-colors">
                    <div className="text-2xl font-bold text-red-600">12</div>
                    <div className="text-xs text-slate-600 mt-1 font-medium">Critical Alarms</div>
                  </div>
                </div>

                <div className="space-y-3 pt-2">
                  <Button 
                    className="w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 font-semibold shadow-md"
                    onClick={() => alert('Exporting database...')}
                  >
                    <svg className="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                    </svg>
                    Export Database
                  </Button>
                  <Button 
                    variant="outline" 
                    className="w-full font-semibold border-slate-300 hover:bg-slate-50"
                    onClick={() => alert('Optimizing database tables...')}
                  >
                    <svg className="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                    Optimize Tables
                  </Button>
                </div>
              </div>
            </CardContent>
          </Card>
        </div>

        <div>
          <h2 className="text-2xl font-bold text-slate-800 mb-5">System Tools & Configuration</h2>
          <div className="grid grid-cols-4 gap-5">
            <Card 
              className="shadow-lg hover:shadow-xl transition-all cursor-pointer bg-gradient-to-br from-blue-50 to-blue-100 border-2 border-blue-200 hover:border-blue-400"
              onClick={() => setActiveView('system-config')}
            >
              <CardContent className="p-6 text-center">
                <div className="w-16 h-16 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-xl">
                  <svg className="w-9 h-9 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2.5} d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2.5} d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div className="font-bold text-slate-800 text-base">System Config</div>
                <div className="text-xs text-slate-600 mt-2 font-medium">Global settings</div>
              </CardContent>
            </Card>

            <Card 
              className="shadow-lg hover:shadow-xl transition-all cursor-pointer bg-gradient-to-br from-green-50 to-green-100 border-2 border-green-200 hover:border-green-400"
              onClick={() => setActiveView('audit-logs')}
            >
              <CardContent className="p-6 text-center">
                <div className="w-16 h-16 bg-gradient-to-br from-green-600 to-emerald-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-xl">
                  <svg className="w-9 h-9 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2.5} d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
                <div className="font-bold text-slate-800 text-base">Audit Logs</div>
                <div className="text-xs text-slate-600 mt-2 font-medium">Activity tracking</div>
              </CardContent>
            </Card>

            <Card 
              className="shadow-lg hover:shadow-xl transition-all cursor-pointer bg-gradient-to-br from-purple-50 to-purple-100 border-2 border-purple-200 hover:border-purple-400"
              onClick={() => setActiveView('api-manager')}
            >
              <CardContent className="p-6 text-center">
                <div className="w-16 h-16 bg-gradient-to-br from-purple-600 to-pink-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-xl">
                  <svg className="w-9 h-9 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2.5} d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                  </svg>
                </div>
                <div className="font-bold text-slate-800 text-base">API Manager</div>
                <div className="text-xs text-slate-600 mt-2 font-medium">Integration hub</div>
              </CardContent>
            </Card>

            <Card 
              className="shadow-lg hover:shadow-xl transition-all cursor-pointer bg-gradient-to-br from-orange-50 to-orange-100 border-2 border-orange-200 hover:border-orange-400"
              onClick={() => setActiveView('performance')}
            >
              <CardContent className="p-6 text-center">
                <div className="w-16 h-16 bg-gradient-to-br from-orange-600 to-red-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-xl">
                  <svg className="w-9 h-9 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2.5} d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                  </svg>
                </div>
                <div className="font-bold text-slate-800 text-base">Performance</div>
                <div className="text-xs text-slate-600 mt-2 font-medium">Monitor & tune</div>
              </CardContent>
            </Card>
          </div>
        </div>
      </div>
    </div>
  );

  return (
    <div className="font-sans antialiased">
      {currentRole === 'login' && renderLogin()}
      {currentRole === 'technician' && renderTechnician()}
      {currentRole === 'cs' && renderCS()}
      {currentRole === 'noc' && renderNOC()}
      {currentRole === 'leader' && renderLeader()}
      {currentRole === 'management' && renderManagement()}
      {currentRole === 'admin' && renderAdmin()}
    </div>
  );
}
