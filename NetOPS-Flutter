  return (
    <div className="min-h-screen bg-background">
      {/* Top Navigation Bar */}
      <div className="bg-primary text-primary-foreground shadow-lg sticky top-0 z-50">
        <div className="flex items-center justify-between px-4 h-16">
          <div className="flex items-center gap-3">
            <Button
              variant="ghost"
              size="icon"
              className="lg:hidden text-primary-foreground hover:bg-primary-foreground/10"
              onClick={() => setMobileMenuOpen(!mobileMenuOpen)}
            >
              {mobileMenuOpen ? <X className="w-6 h-6" /> : <Menu className="w-6 h-6" />}
            </Button>
            <div className="flex items-center gap-2">
              <Wifi className="w-8 h-8" />
              <span className="text-xl font-bold hidden sm:inline">NetOps</span>
            </div>
          </div>
          <div className="flex items-center gap-2">
            <Button variant="ghost" size="icon" className="text-primary-foreground hover:bg-primary-foreground/10 relative">
              <Bell className="w-5 h-5" />
              <span className="absolute top-1 right-1 w-2 h-2 bg-destructive rounded-full"></span>
            </Button>
            <Button variant="ghost" size="icon" className="text-primary-foreground hover:bg-primary-foreground/10">
              <Settings className="w-5 h-5" />
            </Button>
            <Button 
              variant="ghost" 
              size="icon" 
              className="text-primary-foreground hover:bg-primary-foreground/10"
              onClick={() => setIsAuthenticated(false)}
            >
              <LogOut className="w-5 h-5" />
            </Button>
          </div>
        </div>
      </div>

      <div className="flex">
        {/* Sidebar Navigation - Desktop */}
        <div className="hidden lg:block w-64 bg-card border-r border-border min-h-screen sticky top-16">
          <div className="p-4 border-b border-border">
            <div className="flex items-center gap-3 p-3 bg-accent rounded-lg">
              <div className="w-12 h-12 bg-primary rounded-full flex items-center justify-center text-primary-foreground font-bold text-lg">
                {currentRole === 'technician' ? 'TS' : currentRole === 'cs' ? 'CS' : currentRole === 'noc' ? 'NC' : currentRole === 'leader' ? 'TL' : 'MG'}
              </div>
              <div className="flex-1 min-w-0">
                <div className="font-semibold text-sm truncate">
                  {roles.find(r => r.id === currentRole)?.name}
                </div>
                <div className="text-xs text-muted-foreground">Online</div>
              </div>
            </div>
          </div>
          <nav className="p-2">
            <button
              onClick={() => setActiveScreen('dashboard')}
              className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg mb-1 transition-colors ${
                activeScreen === 'dashboard' ? 'bg-primary text-primary-foreground' : 'hover:bg-accent'
              }`}
            >
              <Home className="w-5 h-5" />
              <span className="font-medium">Dashboard</span>
            </button>
            {currentRole === 'technician' && (
              <>
                <button
                  onClick={() => setActiveScreen('tasks')}
                  className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg mb-1 transition-colors ${
                    activeScreen === 'tasks' ? 'bg-primary text-primary-foreground' : 'hover:bg-accent'
                  }`}
                >
                  <Clipboard className="w-5 h-5" />
                  <span className="font-medium">Tugas</span>
                </button>
                <button
                  onClick={() => setActiveScreen('inventory')}
                  className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg mb-1 transition-colors ${
                    activeScreen === 'inventory' ? 'bg-primary text-primary-foreground' : 'hover:bg-accent'
                  }`}
                >
                  <Package className="w-5 h-5" />
                  <span className="font-medium">Inventaris</span>
                </button>
              </>
            )}
            {currentRole === 'cs' && (
              <button
                onClick={() => setActiveScreen('tickets')}
                className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg mb-1 transition-colors ${
                  activeScreen === 'tickets' ? 'bg-primary text-primary-foreground' : 'hover:bg-accent'
                }`}
              >
                <PhoneCall className="w-5 h-5" />
                <span className="font-medium">Tiket</span>
              </button>
            )}
            {currentRole === 'noc' && (
              <button
                onClick={() => setActiveScreen('monitoring')}
                className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg mb-1 transition-colors ${
                  activeScreen === 'monitoring' ? 'bg-primary text-primary-foreground' : 'hover:bg-accent'
                }`}
              >
                <Server className="w-5 h-5" />
                <span className="font-medium">Monitoring</span>
              </button>
            )}
            <button
              onClick={() => setActiveScreen('map')}
              className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg mb-1 transition-colors ${
                activeScreen === 'map' ? 'bg-primary text-primary-foreground' : 'hover:bg-accent'
              }`}
            >
              <MapPin className="w-5 h-5" />
              <span className="font-medium">Peta</span>
            </button>
            <button
              onClick={() => setActiveScreen('chat')}
              className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg mb-1 transition-colors ${
                activeScreen === 'chat' ? 'bg-primary text-primary-foreground' : 'hover:bg-accent'
              }`}
            >
              <MessageSquare className="w-5 h-5" />
              <span className="font-medium">Chat</span>
            </button>
          </nav>
        </div>

        {/* Mobile Sidebar */}
        {mobileMenuOpen && (
          <div className="fixed inset-0 bg-background z-40 lg:hidden">
            <div className="p-4 border-b border-border mt-16">
              <div className="flex items-center gap-3 p-3 bg-accent rounded-lg">
                <div className="w-12 h-12 bg-primary rounded-full flex items-center justify-center text-primary-foreground font-bold text-lg">
                  {currentRole === 'technician' ? 'TS' : currentRole === 'cs' ? 'CS' : currentRole === 'noc' ? 'NC' : currentRole === 'leader' ? 'TL' : 'MG'}
                </div>
                <div className="flex-1 min-w-0">
                  <div className="font-semibold text-sm truncate">
                    {roles.find(r => r.id === currentRole)?.name}
                  </div>
                  <div className="text-xs text-muted-foreground">Online</div>
                </div>
              </div>
            </div>
            <nav className="p-2">
              <button
                onClick={() => {
                  setActiveScreen('dashboard');
                  setMobileMenuOpen(false);
                }}
                className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg mb-1 transition-colors ${
                  activeScreen === 'dashboard' ? 'bg-primary text-primary-foreground' : 'hover:bg-accent'
                }`}
              >
                <Home className="w-5 h-5" />
                <span className="font-medium">Dashboard</span>
              </button>
              {currentRole === 'technician' && (
                <>
                  <button
                    onClick={() => {
                      setActiveScreen('tasks');
                      setMobileMenuOpen(false);
                    }}
                    className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg mb-1 transition-colors ${
                      activeScreen === 'tasks' ? 'bg-primary text-primary-foreground' : 'hover:bg-accent'
                    }`}
                  >
                    <Clipboard className="w-5 h-5" />
                    <span className="font-medium">Tugas</span>
                  </button>
                  <button
                    onClick={() => {
                      setActiveScreen('inventory');
                      setMobileMenuOpen(false);
                    }}
                    className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg mb-1 transition-colors ${
                      activeScreen === 'inventory' ? 'bg-primary text-primary-foreground' : 'hover:bg-accent'
                    }`}
                  >
                    <Package className="w-5 h-5" />
                    <span className="font-medium">Inventaris</span>
                  </button>
                </>
              )}
              {currentRole === 'cs' && (
                <button
                  onClick={() => {
                    setActiveScreen('tickets');
                    setMobileMenuOpen(false);
                  }}
                  className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg mb-1 transition-colors ${
                    activeScreen === 'tickets' ? 'bg-primary text-primary-foreground' : 'hover:bg-accent'
                  }`}
                >
                  <PhoneCall className="w-5 h-5" />
                  <span className="font-medium">Tiket</span>
                </button>
              )}
              {currentRole === 'noc' && (
                <button
                  onClick={() => {
                    setActiveScreen('monitoring');
                    setMobileMenuOpen(false);
                  }}
                  className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg mb-1 transition-colors ${
                    activeScreen === 'monitoring' ? 'bg-primary text-primary-foreground' : 'hover:bg-accent'
                  }`}
                >
                  <Server className="w-5 h-5" />
                  <span className="font-medium">Monitoring</span>
                </button>
              )}
              <button
                onClick={() => {
                  setActiveScreen('map');
                  setMobileMenuOpen(false);
                }}
                className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg mb-1 transition-colors ${
                  activeScreen === 'map' ? 'bg-primary text-primary-foreground' : 'hover:bg-accent'
                }`}
              >
                <MapPin className="w-5 h-5" />
                <span className="font-medium">Peta</span>
              </button>
              <button
                onClick={() => {
                  setActiveScreen('chat');
                  setMobileMenuOpen(false);
                }}
                className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg mb-1 transition-colors ${
                  activeScreen === 'chat' ? 'bg-primary text-primary-foreground' : 'hover:bg-accent'
                }`}
              >
                <MessageSquare className="w-5 h-5" />
                <span className="font-medium">Chat</span>
              </button>
            </nav>
          </div>
        )}

        {/* Main Content Area */}
        <div className="flex-1 p-4 lg:p-6 pb-20 lg:pb-6">
          {/* Dashboard Screen */}
          {activeScreen === 'dashboard' && (
            <div className="space-y-6">
              <div className="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                <div>
                  <h1 className="text-2xl lg:text-3xl font-bold text-foreground">Dashboard</h1>
                  <p className="text-sm text-muted-foreground mt-1">
                    {currentRole === 'technician' && 'Teknisi Lapangan'}
                    {currentRole === 'cs' && 'Customer Service'}
                    {currentRole === 'noc' && 'Network Operations Center'}
                    {currentRole === 'leader' && 'Team Leader'}
                    {currentRole === 'management' && 'Management'}
                  </p>
                </div>
                <div className="flex gap-2">
                  <Select value={currentRole} onValueChange={setCurrentRole}>
                    <SelectTrigger className="w-40">
                      <SelectValue />
                    </SelectTrigger>
                    <SelectContent>
                      {roles.map((role) => (
                        <SelectItem key={role.id} value={role.id}>
                          <div className="flex items-center gap-2">
                            {role.icon}
                            <span className="text-xs">{role.name}</span>
                          </div>
                        </SelectItem>
                      ))}
                    </SelectContent>
                  </Select>
                </div>
              </div>

              {/* Technician Dashboard */}
              {currentRole === 'technician' && (
                <>
                  {/* Status Cards */}
                  <div className="grid grid-cols-2 lg:grid-cols-4 gap-4">
                    <Card className="bg-gradient-to-br from-blue-500 to-blue-600 text-white border-0">
                      <CardContent className="p-4">
                        <div className="flex items-center justify-between">
                          <div>
                            <p className="text-xs opacity-90 mb-1">Tugas Hari Ini</p>
                            <p className="text-2xl font-bold">8</p>
                          </div>
                          <Clipboard className="w-8 h-8 opacity-80" />
                        </div>
                      </CardContent>
                    </Card>
                    <Card className="bg-gradient-to-br from-green-500 to-green-600 text-white border-0">
                      <CardContent className="p-4">
                        <div className="flex items-center justify-between">
                          <div>
                            <p className="text-xs opacity-90 mb-1">Selesai</p>
                            <p className="text-2xl font-bold">5</p>
                          </div>
                          <CheckCircle className="w-8 h-8 opacity-80" />
                        </div>
                      </CardContent>
                    </Card>
                    <Card className="bg-gradient-to-br from-orange-500 to-orange-600 text-white border-0">
                      <CardContent className="p-4">
                        <div className="flex items-center justify-between">
                          <div>
                            <p className="text-xs opacity-90 mb-1">Dalam Proses</p>
                            <p className="text-2xl font-bold">2</p>
                          </div>
                          <Clock className="w-8 h-8 opacity-80" />
                        </div>
                      </CardContent>
                    </Card>
                    <Card className="bg-gradient-to-br from-red-500 to-red-600 text-white border-0">
                      <CardContent className="p-4">
                        <div className="flex items-center justify-between">
                          <div>
                            <p className="text-xs opacity-90 mb-1">Urgent</p>
                            <p className="text-2xl font-bold">1</p>
                          </div>
                          <AlertTriangle className="w-8 h-8 opacity-80" />
                        </div>
                      </CardContent>
                    </Card>
                  </div>

                  {/* Quick Actions */}
                  <Card>
                    <CardHeader>
                      <CardTitle className="text-lg">Quick Actions</CardTitle>
                    </CardHeader>
                    <CardContent>
                      <div className="grid grid-cols-2 lg:grid-cols-4 gap-3">
                        <Button variant="outline" className="h-20 flex-col gap-2">
                          <Clock className="w-6 h-6" />
                          <span className="text-xs">Clock In</span>
                        </Button>
                        <Button variant="outline" className="h-20 flex-col gap-2">
                          <Package className="w-6 h-6" />
                          <span className="text-xs">Request Material</span>
                        </Button>
                        <Button variant="outline" className="h-20 flex-col gap-2">
                          <MapPin className="w-6 h-6" />
                          <span className="text-xs">Navigasi</span>
                        </Button>
                        <Button variant="outline" className="h-20 flex-col gap-2 border-destructive text-destructive hover:bg-destructive hover:text-destructive-foreground">
                          <AlertTriangle className="w-6 h-6" />
                          <span className="text-xs">Emergency</span>
                        </Button>
                      </div>
                    </CardContent>
                  </Card>

                  {/* Today's Tasks */}
                  <Card>
                    <CardHeader>
                      <div className="flex items-center justify-between">
                        <CardTitle className="text-lg">Tugas Hari Ini</CardTitle>
                        <Button variant="ghost" size="sm">
                          Lihat Semua
                          <ChevronRight className="w-4 h-4 ml-1" />
                        </Button>
                      </div>
                    </CardHeader>
                    <CardContent>
                      <div className="space-y-3">
                        {tasks.map((task) => (
                          <div
                            key={task.id}
                            onClick={() => {
                              setSelectedTask(task);
                              setActiveScreen('task-detail');
                            }}
                            className="p-4 border border-border rounded-lg hover:bg-accent cursor-pointer transition-colors"
                          >
                            <div className="flex items-start justify-between mb-2">
                              <div className="flex-1 min-w-0 mr-3">
                                <div className="flex items-center gap-2 mb-1">
                                  <span className="font-semibold text-sm">{task.id}</span>
                                  <span className={`text-xs px-2 py-0.5 rounded-full font-medium ${getPriorityColor(task.priority)}`}>
                                    {task.priority}
                                  </span>
                                </div>
                                <h3 className="font-medium text-foreground mb-1">{task.title}</h3>
                                <p className="text-xs text-muted-foreground mb-2">{task.customer}</p>
                              </div>
                              <span className={`text-xs px-2 py-1 rounded font-medium ${getStatusColor(task.status)}`}>
                                {task.status}
                              </span>
                            </div>
                            <div className="flex items-center gap-4 text-xs text-muted-foreground">
                              <div className="flex items-center gap-1">
                                <MapPin className="w-3 h-3" />
                                <span>{task.location}</span>
                              </div>
                              <div className="flex items-center gap-1">
                                <Clock className="w-3 h-3" />
                                <span>{task.sla}</span>
                              </div>
                            </div>
                          </div>
                        ))}
                      </div>
                    </CardContent>
                  </Card>
                </>
