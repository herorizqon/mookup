              </Card>

              <div className="flex gap-3 sticky bottom-4">
                <Button variant="outline" className="flex-1">
                  Save Draft
                </Button>
                <Button className="flex-1">
                  Complete Task
                </Button>
              </div>
            </div>
          )}

          {/* Tasks List Screen */}
          {activeScreen === 'tasks' && (
            <div className="space-y-6">
              <div className="flex items-center justify-between">
                <h1 className="text-2xl font-bold text-foreground">Daftar Tugas</h1>
                <div className="flex gap-2">
                  <Button variant="outline" size="sm">
                    <Filter className="w-4 h-4 mr-1" />
                    Filter
                  </Button>
                  <Button variant="outline" size="sm">
                    <Search className="w-4 h-4 mr-1" />
                    Search
                  </Button>
                </div>
              </div>

              <div className="space-y-3">
                {tasks.map((task) => (
                  <Card
                    key={task.id}
                    className="cursor-pointer hover:shadow-md transition-shadow"
                    onClick={() => {
                      setSelectedTask(task);
                      setActiveScreen('task-detail');
                    }}
                  >
                    <CardContent className="p-4">
                      <div className="flex items-start justify-between mb-2">
                        <div className="flex-1 min-w-0 mr-3">
                          <div className="flex items-center gap-2 mb-1">
                            <span className="font-semibold text-sm">{task.id}</span>
                            <span className={`text-xs px-2 py-0.5 rounded-full font-medium ${getPriorityColor(task.priority)}`}>
                              {task.priority}
                            </span>
                          </div>
                          <h3 className="font-medium text-foreground mb-1">{task.title}</h3>
                          <p className="text-xs text-muted-foreground mb-2">{task.customer}</p>
                        </div>
                        <span className={`text-xs px-2 py-1 rounded font-medium ${getStatusColor(task.status)}`}>
                          {task.status}
                        </span>
                      </div>
                      <div className="flex items-center gap-4 text-xs text-muted-foreground">
                        <div className="flex items-center gap-1">
                          <MapPin className="w-3 h-3" />
                          <span>{task.location}</span>
                        </div>
                        <div className="flex items-center gap-1">
                          <Clock className="w-3 h-3" />
                          <span>{task.sla}</span>
                        </div>
                      </div>
                    </CardContent>
                  </Card>
                ))}
              </div>
            </div>
          )}

          {/* Inventory Screen */}
          {activeScreen === 'inventory' && (
            <div className="space-y-6">
              <div className="flex items-center justify-between">
                <h1 className="text-2xl font-bold text-foreground">Inventaris</h1>
                <Button>
                  <Package className="w-4 h-4 mr-2" />
                  Request Material
                </Button>
              </div>

              <Card>
                <CardHeader>
                  <CardTitle className="text-lg">Scan QR Code</CardTitle>
                </CardHeader>
                <CardContent>
                  <div className="aspect-square max-w-sm mx-auto bg-muted rounded-lg flex items-center justify-center border-2 border-dashed border-border">
                    <div className="text-center">
                      <Package className="w-16 h-16 mx-auto mb-4 text-muted-foreground" />
                      <p className="text-sm text-muted-foreground mb-4">Scan QR code untuk pickup/return material</p>
                      <Button>Open Scanner</Button>
                    </div>
                  </div>
                </CardContent>
              </Card>

              <Card>
                <CardHeader>
                  <CardTitle className="text-lg">Material Saya</CardTitle>
                </CardHeader>
                <CardContent>
                  <div className="space-y-3">
                    <div className="flex items-center justify-between p-4 border border-border rounded-lg">
                      <div>
                        <p className="font-medium">ONT Device</p>
                        <p className="text-sm text-muted-foreground">Stock: 3 units</p>
                      </div>
                      <Button variant="outline" size="sm">Return</Button>
                    </div>
                    <div className="flex items-center justify-between p-4 border border-border rounded-lg">
                      <div>
                        <p className="font-medium">Fiber Optic Cable</p>
                        <p className="text-sm text-muted-foreground">Stock: 150 meter</p>
                      </div>
                      <Button variant="outline" size="sm">Return</Button>
                    </div>
                    <div className="flex items-center justify-between p-4 border border-border rounded-lg">
                      <div>
                        <p className="font-medium">Connector SC/APC</p>
                        <p className="text-sm text-muted-foreground">Stock: 10 pcs</p>
                      </div>
                      <Button variant="outline" size="sm">Return</Button>
                    </div>
                  </div>
                </CardContent>
              </Card>
            </div>
          )}

          {/* Tickets Screen */}
          {activeScreen === 'tickets' && (
            <div className="space-y-6">
              <div className="flex items-center justify-between">
                <h1 className="text-2xl font-bold text-foreground">Manajemen Tiket</h1>
                <Button>
                  Buat Tiket Baru
                </Button>
              </div>

              <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                <Card>
                  <CardContent className="p-4">
                    <div className="text-center">
                      <p className="text-3xl font-bold text-blue-600">25</p>
                      <p className="text-sm text-muted-foreground mt-1">Open</p>
                    </div>
                  </CardContent>
                </Card>
                <Card>
                  <CardContent className="p-4">
                    <div className="text-center">
                      <p className="text-3xl font-bold text-orange-600">15</p>
                      <p className="text-sm text-muted-foreground mt-1">In Progress</p>
                    </div>
                  </CardContent>
                </Card>
                <Card>
                  <CardContent className="p-4">
                    <div className="text-center">
                      <p className="text-3xl font-bold text-green-600">60</p>
                      <p className="text-sm text-muted-foreground mt-1">Resolved</p>
                    </div>
                  </CardContent>
                </Card>
              </div>

              <Card>
                <CardHeader>
                  <div className="flex items-center gap-2">
                    <Input placeholder="Search tickets..." className="flex-1" />
                    <Button variant="outline" size="icon">
                      <Search className="w-4 h-4" />
                    </Button>
                    <Button variant="outline" size="icon">
                      <Filter className="w-4 h-4" />
                    </Button>
                  </div>
                </CardHeader>
                <CardContent>
                  <div className="space-y-3">
                    {tickets.map((ticket) => (
                      <div key={ticket.id} className="p-4 border border-border rounded-lg hover:bg-accent cursor-pointer transition-colors">
                        <div className="flex items-start justify-between mb-2">
                          <div className="flex-1 min-w-0 mr-3">
                            <div className="flex items-center gap-2 mb-1">
                              <span className="font-semibold text-sm">{ticket.id}</span>
                              <span className={`text-xs px-2 py-0.5 rounded-full font-medium ${getPriorityColor(ticket.priority)}`}>
                                {ticket.priority}
                              </span>
                            </div>
                            <h3 className="font-medium text-foreground mb-1">{ticket.customer}</h3>
                            <p className="text-sm text-muted-foreground">{ticket.issue}</p>
                          </div>
                          <span className={`text-xs px-2 py-1 rounded font-medium ${getStatusColor(ticket.status)}`}>
                            {ticket.status}
                          </span>
                        </div>
                        <div className="flex items-center gap-4 text-xs text-muted-foreground">
                          <div className="flex items-center gap-1">
                            <Users className="w-3 h-3" />
                            <span>{ticket.assignedTo}</span>
                          </div>
                          <div className="flex items-center gap-1">
                            <Clock className="w-3 h-3" />
                            <span>{ticket.createdAt}</span>
                          </div>
                        </div>
                        <div className="flex gap-2 mt-3">
                          <Button size="sm" variant="outline">Assign</Button>
                          <Button size="sm" variant="outline">Update</Button>
                          <Button size="sm">View Details</Button>
                        </div>
                      </div>
                    ))}
                  </div>
                </CardContent>
              </Card>
            </div>
          )}

          {/* Monitoring Screen */}
          {activeScreen === 'monitoring' && (
            <div className="space-y-6">
              <div className="flex items-center justify-between">
                <h1 className="text-2xl font-bold text-foreground">Network Monitoring</h1>
                <div className="flex gap-2">
                  <Button variant="outline" size="sm">
                    <Filter className="w-4 h-4 mr-1" />
                    Filter
                  </Button>
                  <Button variant="outline" size="sm">
                    <Download className="w-4 h-4 mr-1" />
                    Export
                  </Button>
                </div>
              </div>

              <div className="grid grid-cols-2 lg:grid-cols-4 gap-4">
                <Card className="bg-gradient-to-br from-green-500 to-green-600 text-white border-0">
                  <CardContent className="p-4">
                    <div className="flex items-center justify-between">
                      <div>
                        <p className="text-xs opacity-90 mb-1">Uptime</p>
                        <p className="text-2xl font-bold">99.8%</p>
                      </div>
                      <Activity className="w-8 h-8 opacity-80" />
                    </div>
                  </CardContent>
                </Card>
                <Card className="bg-gradient-to-br from-blue-500 to-blue-600 text-white border-0">
                  <CardContent className="p-4">
                    <div className="flex items-center justify-between">
                      <div>
                        <p className="text-xs opacity-90 mb-1">Active Devices</p>
                        <p className="text-2xl font-bold">2,547</p>
                      </div>
                      <Server className="w-8 h-8 opacity-80" />
                    </div>
                  </CardContent>
                </Card>
                <Card className="bg-gradient-to-br from-red-500 to-red-600 text-white border-0">
                  <CardContent className="p-4">
                    <div className="flex items-center justify-between">
                      <div>
                        <p className="text-xs opacity-90 mb-1">Critical Alarms</p>
                        <p className="text-2xl font-bold">3</p>
                      </div>
                      <AlertTriangle className="w-8 h-8 opacity-80" />
                    </div>
                  </CardContent>
                </Card>
                <Card className="bg-gradient-to-br from-purple-500 to-purple-600 text-white border-0">
                  <CardContent className="p-4">
                    <div className="flex items-center justify-between">
                      <div>
                        <p className="text-xs opacity-90 mb-1">Latency</p>
                        <p className="text-2xl font-bold">12ms</p>
                      </div>
                      <TrendingUp className="w-8 h-8 opacity-80" />
                    </div>
                  </CardContent>
                </Card>
              </div>

              <Card>
                <CardHeader>
                  <CardTitle className="text-lg">Network Performance</CardTitle>
                </CardHeader>
                <CardContent>
                  <ResponsiveContainer width="100%" height={300}>
                    <LineChart data={networkMetrics}>
                      <CartesianGrid strokeDasharray="3 3" />
                      <XAxis dataKey="time" />
                      <YAxis />
                      <Tooltip />
                      <Legend />
                      <Line type="monotone" dataKey="uptime" stroke="#10b981" name="Uptime %" />
                      <Line type="monotone" dataKey="latency" stroke="#3b82f6" name="Latency (ms)" />
                    </LineChart>
                  </ResponsiveContainer>
                </CardContent>
              </Card>

              <Card>
                <CardHeader>
                  <CardTitle className="text-lg">Active Alarms</CardTitle>
                </CardHeader>
                <CardContent>
                  <div className="space-y-3">
                    {alarms.map((alarm) => (
                      <div key={alarm.id} className="p-4 border border-border rounded-lg hover:bg-accent cursor-pointer transition-colors">
                        <div className="flex items-start justify-between mb-2">
                          <div className="flex-1 min-w-0 mr-3">
                            <div className="flex items-center gap-2 mb-1">
                              <span className="font-semibold text-sm">{alarm.id}</span>
                              <span className={`text-xs px-2 py-0.5 rounded-full font-medium ${getSeverityColor(alarm.severity)}`}>
                                {alarm.severity}
                              </span>
                            </div>
                            <h3 className="font-medium text-foreground mb-1">{alarm.device}</h3>
                            <p className="text-sm text-muted-foreground">{alarm.message}</p>
                          </div>
                          <span className={`text-xs px-2 py-1 rounded font-medium ${getStatusColor(alarm.status)}`}>
                            {alarm.status}
                          </span>
                        </div>
                        <div className="flex items-center gap-4 text-xs text-muted-foreground mb-3">
                          <div className="flex items-center gap-1">
                            <Clock className="w-3 h-3" />
                            <span>{alarm.timestamp}</span>
                          </div>
                        </div>
                        <div className="flex gap-2">
                          <Button size="sm" variant="outline">Acknowledge</Button>
                          <Button size="sm" variant="outline">Diagnose</Button>
                          <Button size="sm">Resolve</Button>
                        </div>
                      </div>
                    ))}
                  </div>
                </CardContent>
              </Card>
            </div>
          )}

          {/* Map Screen */}
          {activeScreen === 'map' && (
            <div className="space-y-6">
              <div className="flex items-center justify-between">
                <h1 className="text-2xl font-bold text-foreground">Live Map</h1>
                <div className="flex gap-2">
                  <Button variant="outline" size="sm">
                    <Filter className="w-4 h-4 mr-1" />
                    Filter
                  </Button>
                </div>
              </div>

              <Card>
                <CardContent className="p-0">
                  <div className="relative h-[600px] bg-muted rounded-lg overflow-hidden">
                    <img
                      src="https://placehold.co/1200x800"
                      alt="Interactive map displaying real-time technician locations with GPS pins, task routes marked in different colors, and network coverage zones overlaid on street view showing urban telecommunications infrastructure"
                      className="w-full h-full object-cover"
                    />
                    <div className="absolute top-4 right-4 flex flex-col gap-2">
                      <Button size="sm" className="bg-white text-foreground hover:bg-gray-100">
                        <MapPin className="w-4 h-4 mr-2" />
                        My Location
                      </Button>
                      <Button size="sm" className="bg-white text-foreground hover:bg-gray-100">
                        <Users className="w-4 h-4 mr-2" />
                        All Technicians
                      </Button>
                    </div>
                  </div>
                </CardContent>
              </Card>

              <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                <Card>
                  <CardContent className="p-4">
                    <div className="flex items-center gap-3">
                      <div className="w-3 h-3 bg-green-500 rounded-full"></div>
                      <div>
                        <p className="font-medium">Online</p>
                        <p className="text-sm text-muted-foreground">12 technicians</p>
                      </div>
                    </div>
                  </CardContent>
                </Card>
                <Card>
                  <CardContent className="p-4">
                    <div className="flex items-center gap-3">
                      <div className="w-3 h-3 bg-orange-500 rounded-full"></div>
                      <div>
                        <p className="font-medium">On Task</p>
                        <p className="text-sm text-muted-foreground">8 technicians</p>
                      </div>
                    </div>
                  </CardContent>
                </Card>
                <Card>
                  <CardContent className="p-4">
                    <div className="flex items-center gap-3">
                      <div className="w-3 h-3 bg-gray-500 rounded-full"></div>
                      <div>
                        <p className="font-medium">Offline</p>
                        <p className="text-sm text-muted-foreground">3 technicians</p>
                      </div>
                    </div>
                  </CardContent>
                </Card>
              </div>
            </div>
          )}

          {/* Chat Screen */}
          {activeScreen === 'chat' && (
            <div className="space-y-6">
              <div className="flex items-center justify-between">
                <h1 className="text-2xl font-bold text-foreground">Internal Chat</h1>
              </div>

              <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <Card className="lg:col-span-1">
                  <CardHeader>
                    <CardTitle className="text-lg">Conversations</CardTitle>
                  </CardHeader>
                  <CardContent>
                    <div className="space-y-2">
                      <div className="p-3 border border-primary bg-accent rounded-lg cursor-pointer">
                        <div className="flex items-center gap-3 mb-1">
                          <div className="w-10 h-10 bg-primary rounded-full flex items-center justify-center text-primary-foreground font-bold">
                            NC
                          </div>
                          <div className="flex-1 min-w-0">
                            <p className="font-medium text-sm">NOC Team</p>
                            <p className="text-xs text-muted-foreground truncate">Checking network status...</p>
                          </div>
                        </div>
                      </div>
                      <div className="p-3 border border-border rounded-lg cursor-pointer hover:bg-accent">
                        <div className="flex items-center gap-3 mb-1">
                          <div className="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center text-white font-bold">
                            TL
                          </div>
                          <div className="flex-1 min-w-0">
                            <p className="font-medium text-sm">Team Leader</p>
                            <p className="text-xs text-muted-foreground truncate">Great job on today's tasks!</p>
                          </div>
                        </div>
                      </div>
                      <div className="p-3 border border-border rounded-lg cursor-pointer hover:bg-accent">
                        <div className="flex items-center gap-3 mb-1">
                          <div className="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold">
                            WH
                          </div>
                          <div className="flex-1 min-w-0">
                            <p className="font-medium text-sm">Warehouse</p>
                            <p className="text-xs text-muted-foreground truncate">Material request approved</p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </CardContent>
                </Card>

                <Card className="lg:col-span-2">
                  <CardHeader>
                    <div className="flex items-center gap-3">
                      <div className="w-10 h-10 bg-primary rounded-full flex items-center justify-center text-primary-foreground font-bold">
                        NC
                      </div>
                      <div>
                        <p className="font-medium">NOC Team</p>
                        <p className="text-xs text-green-600">Online</p>
                      </div>
                    </div>
                  </CardHeader>
                  <CardContent>
                    <div className="h-[400px] flex flex-col">
                      <div className="flex-1 overflow-y-auto space-y-4 mb-4">
                        <div className="flex gap-2">
                          <div className="w-8 h-8 bg-primary rounded-full flex items-center justify-center text-primary-foreground text-xs font-bold">
                            NC
                          </div>
                          <div className="flex-1">
                            <div className="bg-muted p-3 rounded-lg rounded-tl-none">
                              <p className="text-sm">Hi, we detected high latency in your area. Are you experiencing any issues?</p>
                            </div>
                            <p className="text-xs text-muted-foreground mt-1">10:30</p>
                          </div>
                        </div>
                        <div className="flex gap-2 justify-end">
                          <div className="flex-1 text-right">
                            <div className="bg-primary text-primary-foreground p-3 rounded-lg rounded-tr-none inline-block">
                              <p className="text-sm">Yes, signal is dropping at customer location. Running diagnostics now.</p>
                            </div>
                            <p className="text-xs text-muted-foreground mt-1">10:32</p>
                          </div>
                        </div>
                        <div className="flex gap-2">
                          <div className="w-8 h-8 bg-primary rounded-full flex items-center justify-center text-primary-foreground text-xs font-bold">
                            NC
                          </div>
                          <div className="flex-1">
                            <div className="bg-muted p-3 rounded-lg rounded-tl-none">
                              <p className="text-sm">We can see the issue from here. OLT port showing errors. We're rebooting now.</p>
                            </div>
                            <p className="text-xs text-muted-foreground mt-1">10:35</p>
                          </div>
                        </div>
                      </div>
                      <div className="flex gap-2">
                        <Input placeholder="Type a message..." className="flex-1" />
                        <Button size="icon">
                          <MessageSquare className="w-4 h-4" />
                        </Button>
                      </div>
                    </div>
                  </CardContent>
                </Card>
              </div>
            </div>
          )}
        </div>
      </div>

      {/* Bottom Navigation - Mobile Only */}
      <div className="fixed bottom-0 left-0 right-0 bg-card border-t border-border lg:hidden z-50">
        <div className="flex justify-around items-center h-16">
          <button
            onClick={() => setActiveScreen('dashboard')}
            className={`flex flex-col items-center gap-1 px-4 py-2 ${
              activeScreen === 'dashboard' ? 'text-primary' : 'text-muted-foreground'
            }`}
          >
            <Home className="w-5 h-5" />
            <span className="text-xs">Home</span>
          </button>
          {currentRole === 'technician' && (
            <button
              onClick={() => setActiveScreen('tasks')}
              className={`flex flex-col items-center gap-1 px-4 py-2 ${
                activeScreen === 'tasks' ? 'text-primary' : 'text-muted-foreground'
              }`}
            >
              <Clipboard className="w-5 h-5" />
              <span className="text-xs">Tugas</span>
            </button>
          )}
          {currentRole === 'cs' && (
            <button
              onClick={() => setActiveScreen('tickets')}
              className={`flex flex-col items-center gap-1 px-4 py-2 ${
                activeScreen === 'tickets' ? 'text-primary' : 'text-muted-foreground'
              }`}
            >
              <PhoneCall className="w-5 h-5" />
              <span className="text-xs">Tiket</span>
            </button>
          )}
          <button
            onClick={() => setActiveScreen('map')}
            className={`flex flex-col items-center gap-1 px-4 py-2 ${
              activeScreen === 'map' ? 'text-primary' : 'text-muted-foreground'
            }`}
          >
            <MapPin className="w-5 h-5" />
            <span className="text-xs">Map</span>
          </button>
          <button
            onClick={() => setActiveScreen('chat')}
            className={`flex flex-col items-center gap-1 px-4 py-2 ${
              activeScreen === 'chat' ? 'text-primary' : 'text-muted-foreground'
            }`}
          >
            <MessageSquare className="w-5 h-5" />
            <span className="text-xs">Chat</span>
          </button>
        </div>
      </div>
    </div>
  );
}
