import React, { useState } from 'react';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '/components/ui/card';
import { Button } from '/components/ui/button';
import { Input } from '/components/ui/input';
import { Label } from '/components/ui/label';
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '/components/ui/select';
import { LineChart, Line, BarChart, Bar, PieChart, Pie, Cell, XAxis, YAxis, CartesianGrid, Tooltip, Legend, ResponsiveContainer } from 'recharts';
import { Bell, CheckCircle, Clock, AlertTriangle, MapPin, MessageSquare, Package, Users, Activity, TrendingUp, Wifi, Radio, Server, PhoneCall, Calendar, Search, Filter, Download, Upload, Settings, LogOut, Menu, X, ChevronRight, Home, Clipboard, Archive, BarChart3, Shield } from 'lucide-react';

interface Task {
  id: string;
  title: string;
  priority: 'urgent' | 'high' | 'normal';
  status: 'pending' | 'in-progress' | 'completed';
  location: string;
  sla: string;
  customer: string;
}

interface Ticket {
  id: string;
  customer: string;
  issue: string;
  priority: 'urgent' | 'high' | 'normal';
  status: 'open' | 'in-progress' | 'resolved';
  assignedTo: string;
  createdAt: string;
}

interface Alarm {
  id: string;
  device: string;
  severity: 'critical' | 'major' | 'minor';
  message: string;
  timestamp: string;
  status: 'active' | 'acknowledged' | 'resolved';
}

export default function NetOpsApp() {
  const [currentRole, setCurrentRole] = useState<string>('technician');
  const [isAuthenticated, setIsAuthenticated] = useState(false);
  const [activeScreen, setActiveScreen] = useState('dashboard');
  const [selectedTask, setSelectedTask] = useState<Task | null>(null);
  const [mobileMenuOpen, setMobileMenuOpen] = useState(false);

  // Sample Data
  const tasks: Task[] = [
    { id: 'T001', title: 'Instalasi ONT Baru', priority: 'high', status: 'pending', location: 'Jl. Sudirman No. 45', sla: '2 jam tersisa', customer: 'PT Maju Jaya' },
    { id: 'T002', title: 'Perbaikan Kabel FO', priority: 'urgent', status: 'in-progress', location: 'Jl. Gatot Subroto 12', sla: '45 menit tersisa', customer: 'CV Sejahtera' },
    { id: 'T003', title: 'Maintenance OLT', priority: 'normal', status: 'pending', location: 'POP Kemayoran', sla: '1 hari tersisa', customer: 'Internal' }
  ];

  const tickets: Ticket[] = [
    { id: 'TK001', customer: 'Budi Santoso', issue: 'Internet lambat', priority: 'high', status: 'open', assignedTo: 'Team A', createdAt: '10:30' },
    { id: 'TK002', customer: 'Siti Aminah', issue: 'Koneksi terputus', priority: 'urgent', status: 'in-progress', assignedTo: 'Team B', createdAt: '09:15' },
    { id: 'TK003', customer: 'Ahmad Fauzi', issue: 'Request upgrade paket', priority: 'normal', status: 'open', assignedTo: 'Unassigned', createdAt: '11:00' }
  ];

  const alarms: Alarm[] = [
    { id: 'A001', device: 'OLT-JKT-01', severity: 'critical', message: 'High temperature detected', timestamp: '14:25', status: 'active' },
    { id: 'A002', device: 'ONT-12345', severity: 'major', message: 'Signal loss detected', timestamp: '14:20', status: 'acknowledged' },
    { id: 'A003', device: 'OLT-JKT-02', severity: 'minor', message: 'Port utilization 85%', timestamp: '13:50', status: 'resolved' }
  ];

  const kpiData = [
    { name: 'Sen', completed: 12, pending: 3 },
    { name: 'Sel', completed: 15, pending: 2 },
    { name: 'Rab', completed: 18, pending: 4 },
    { name: 'Kam', completed: 14, pending: 1 },
    { name: 'Jum', completed: 20, pending: 5 }
  ];

  const ticketStatusData = [
    { name: 'Open', value: 25, color: '#3b82f6' },
    { name: 'In Progress', value: 15, color: '#f59e0b' },
    { name: 'Resolved', value: 60, color: '#10b981' }
  ];

  const networkMetrics = [
    { time: '10:00', uptime: 99.8, latency: 12 },
    { time: '11:00', uptime: 99.9, latency: 10 },
    { time: '12:00', uptime: 99.7, latency: 15 },
    { time: '13:00', uptime: 99.9, latency: 11 },
    { time: '14:00', uptime: 99.8, latency: 13 }
  ];

  const roles = [
    { id: 'technician', name: 'Technician', icon: <Activity className="w-4 h-4" /> },
    { id: 'cs', name: 'Customer Service', icon: <PhoneCall className="w-4 h-4" /> },
    { id: 'noc', name: 'NOC', icon: <Server className="w-4 h-4" /> },
    { id: 'leader', name: 'Team Leader', icon: <Users className="w-4 h-4" /> },
    { id: 'management', name: 'Management', icon: <BarChart3 className="w-4 h-4" /> }
  ];

  const getPriorityColor = (priority: string) => {
    switch (priority) {
      case 'urgent': return 'bg-destructive text-destructive-foreground';
      case 'high': return 'bg-orange-500 text-white';
      case 'normal': return 'bg-primary text-primary-foreground';
      default: return 'bg-muted text-muted-foreground';
    }
  };

  const getSeverityColor = (severity: string) => {
    switch (severity) {
      case 'critical': return 'bg-destructive text-destructive-foreground';
      case 'major': return 'bg-orange-500 text-white';
      case 'minor': return 'bg-yellow-500 text-white';
      default: return 'bg-muted text-muted-foreground';
    }
  };

  const getStatusColor = (status: string) => {
    switch (status) {
      case 'completed':
      case 'resolved': return 'bg-green-500 text-white';
      case 'in-progress':
      case 'acknowledged': return 'bg-blue-500 text-white';
      case 'pending':
      case 'open':
      case 'active': return 'bg-orange-500 text-white';
      default: return 'bg-muted text-muted-foreground';
    }
  };

  // Login Screen
  if (!isAuthenticated) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-blue-600 via-blue-700 to-blue-900 flex items-center justify-center p-4">
        <Card className="w-full max-w-md shadow-2xl">
          <CardHeader className="text-center space-y-4 pb-8">
            <div className="mx-auto w-20 h-20 bg-primary rounded-2xl flex items-center justify-center shadow-lg">
              <Wifi className="w-12 h-12 text-primary-foreground" />
            </div>
            <CardTitle className="text-3xl font-bold text-foreground">NetOps</CardTitle>
            <CardDescription className="text-base">
              Field Service Management System
            </CardDescription>
          </CardHeader>
          <CardContent className="space-y-6">
            <div className="space-y-4">
              <div className="space-y-2">
                <Label htmlFor="username" className="text-sm font-medium">Username</Label>
                <Input 
                  id="username" 
                  type="text" 
                  placeholder="Masukkan username"
                  className="h-12"
                />
              </div>
              <div className="space-y-2">
                <Label htmlFor="password" className="text-sm font-medium">Password</Label>
                <Input 
                  id="password" 
                  type="password" 
                  placeholder="Masukkan password"
                  className="h-12"
                />
              </div>
              <div className="space-y-2">
                <Label htmlFor="role" className="text-sm font-medium">Role</Label>
                <Select value={currentRole} onValueChange={setCurrentRole}>
                  <SelectTrigger className="h-12">
                    <SelectValue />
                  </SelectTrigger>
                  <SelectContent>
                    {roles.map((role) => (
                      <SelectItem key={role.id} value={role.id}>
                        <div className="flex items-center gap-2">
                          {role.icon}
                          <span>{role.name}</span>
                        </div>
                      </SelectItem>
                    ))}
                  </SelectContent>
                </Select>
              </div>
            </div>
            <Button 
              className="w-full h-12 text-base font-semibold"
              onClick={() => setIsAuthenticated(true)}
            >
              Login
            </Button>
            <div className="text-center">
              <button className="text-sm text-primary hover:underline">
                Lupa password?
              </button>
            </div>
          </CardContent>
        </Card>
      </div>
    );
  }

